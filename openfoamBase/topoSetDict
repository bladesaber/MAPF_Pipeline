FoamFile
{
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

actions
(
    {
	name    pipe_all;
        type    faceSet;
	action  new;
        source  patchToFace;
	sourceInfo
	{
	    patch pipe;
	}
    }

// ------ Create Inlet Patch
    {
	name    inlet_box;
        type    faceSet;
	action  new;
        source  boxToFace;
	sourceInfo
	{
	    box (-8.0 -8.0 -1.0) (7.3 8.0 0.01);
	}
    }

    {
	name    inlet;
        type    faceSet;
	action  new;
        source  faceToFace;
	sourceInfo
	{
	    set pipe_all;
	}
    }

    {
	name    inlet;
        type    faceSet;
	action  subset;
        source  faceToFace;
	sourceInfo
	{
	    set inlet_box;
	}
    }

// ------ Create Outlet Patch
    {
	name    outlet_box;
        type    faceSet;
	action  new;
        source  boxToFace;
	sourceInfo
	{
	    box (7.3 -8.0 -1.0) (22.0 8.0 0.01);
	}
    }

    {
	name    outlet;
        type    faceSet;
	action  new;
        source  faceToFace;
	sourceInfo
	{
	    set pipe_all;
	}
    }

    {
	name    outlet;
        type    faceSet;
	action  subset;
        source  faceToFace;
	sourceInfo
	{
	    set outlet_box;
	}
    }

// ------ Create Wall
    {
	name    wall;
        type    faceSet;
	action  new;
        source  faceToFace;
	sourceInfo
	{
	    set pipe_all;
	}
    }

    {
	name    wall;
        type    faceSet;
	action  delete;
        source  faceToFace;
	sourceInfo
	{
	    set inlet;
	}
    }

    {
	name    wall;
        type    faceSet;
	action  delete;
        source  faceToFace;
	sourceInfo
	{
	    set outlet;
	}
    }

);

