FoamFile
{
    format      ascii;
    class       dictionary;
    object      createPatchDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

patches
(
    {
        // Name of new patch
        name inlet;

        // Dictionary to construct new patch from
        patchInfo
        {
            type patch;
        }

        // How to construct: either from 'patches' or 'set'
        constructFrom set;

        // If constructFrom = set : name of faceSet
        set inlet;
    }

    {
        name outlet;
        patchInfo
        {
            type patch;
        }
        constructFrom set;
        set outlet;
    }

    {
        name wall;
        patchInfo
        {
            type patch;
        }
        constructFrom set;
        set wall;
    }
);

